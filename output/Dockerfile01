# 使用官方 Python 3.11 镜像
FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 复制依赖文件
COPY requirements.txt .

# 安装依赖
RUN apt-get update && apt-get install -y build-essential
RUN pip install --no-cache-dir -r requirements.txt

# 复制项目代码
COPY . .


# 暴露端口
EXPOSE 8000

# 设置环境变量
ENV PYTHONPATH=src

# 启动命令
CMD ["uvicorn", "openapi_server.main:app", "--host", "0.0.0.0", "--port", "8000"] 